@model EntityProductos.EntProductos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="container">

        <br />
        @if (TempData["mensaje"] != null)
        {
            <div class="alert alert-success small">@TempData["mensaje"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger small">@TempData["error"]</div>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EntProductos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <input type="hidden" name="ID" value="@Model.Id" />
        @*Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="control-label col-md-2">Nombre</div>

        <div class="col-md-10">
            @*Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })*@
            @*Html.TextBox("Nombre", "", new { @class = "text-black" })*@
            @*Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })*@ <!--Se Quito comentario en esta linea-->
            <input type="text" class="form-control" name="Nombre" value=@Model.Nombre>
        </div>
    </div>

        <div class="control-label col-md-2">Fecha de Caducidad</div>
        <div class="form-group">
            @*Html.LabelFor(model => model.FechaCaducidad, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                
                @*Html.EditorFor(model => model.FechaCaducidad, new { htmlAttributes = new { @class = "form-control", type = "date" } })*@
                @*Html.ValidationMessageFor(model => model.FechaCaducidad, "", new { @class = "text-danger" })*@
                <input type="date" class="form-control" name="FechaCaducidad" value="@Model.FechaCaducidad.ToString("yyyy-MM-dd")">

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MarcaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Html.EditorFor(model => model.MarcaId, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("Marcaid", null, "Seleccionar", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.MarcaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartamentoId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*Html.EditorFor(model => model.DepartamentoId, new { htmlAttributes = new { @class = "form-control" } })*@

                @Html.DropDownList("Departamentoid")
                @Html.ValidationMessageFor(model => model.DepartamentoId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-success btn-sm" formaction="/Home/Editar" />
            </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>

</body>
</html>
