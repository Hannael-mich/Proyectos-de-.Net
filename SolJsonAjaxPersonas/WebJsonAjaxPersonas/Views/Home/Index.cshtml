
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>A.Paterno</th>
                    <th>A.Materno</th>
                    <th>Edad</th>
                    <th>Fecha Alta</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="info">
                @*Aqui va la informacion de la tabla*@
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"
            integrity="sha256-C6CB9UYIS9UJeqinPHWTHVqh/E1uhG5Twh+Y5qFQmYg="
            crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script>


        function ObtenerInfoTabla() {
            jQuery.ajax({
                type: "Get",
                url: '/Home/Obtener',
                contentType: 'aplication/json; charset = utf-8',
                success: function (respuesta) {
                    if (respuesta.mensaje == "ok") {
                        LlenarTabla(respuesta.ls);
                    }
                    else
                    {
                        alert(respuesta.mensaje);
                    }
                },
                error: function(objXMLHttpRequest){
                alert(objXMLHttpRequest);
                }
            });
        }

        function LlenarTabla(infoTabla) {
            debugger;
            var f = '';
            $.each(infoTabla, function (i, element) {
                f += '<tr>';

                f += '<td>';
                f += element.Nombre;
                f += '</td>';

                f += ' <td> ';
                f += element.ApellidoPaterno;
                f += ' </td> ';

                f += ' <td> ';
                f += element.ApellidoMaterno;
                f += ' </td> ';

                f += ' <td> ';
                f += element.Edad;
                f += ' </td> ';

                f += ' <td> ';
                f += element.FechaAlta;
                f += ' </td> ';

                f += ' </tr> ';
            })

            $("#info").enpty();
            $("#info").html(f);
        }
    </script>

</body>
</html>
