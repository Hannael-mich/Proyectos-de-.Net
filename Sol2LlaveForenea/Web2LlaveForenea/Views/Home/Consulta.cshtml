@using EntityProductos
@model List<EntProductos>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Consulta</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">

        <br />
        @if (TempData["mensaje"] != null)
        {
            <div class="alert alert-success small">@TempData["mensaje"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-success small">@TempData["error"]</div>
        }

        
        <form action="/Home/BuscarAlgo" method="post" mt-3 mb-3>
            <div class="row mb-4">
                <div class="col-6">
                    <input type="text" name="texto" class="form-control" placeholder="Buscar..." />
                </div>
                <div class="col-2">
                    <input type="submit" value="Buscar" class="btn btn-success" />
                </div>
            </div>
        </form>

        <a href="/Home/AgregarFormulario" class="btn btn-outline-success btn-sm">Agregar</a>
        <br /><br />
        <table class="table table-hover">
            <tr>
                <th>Nombre</th>
                <th>Fecha de Caducidad</th>
                <th>Marca</th>
                <th>Departamento</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (EntProductos p in Model)
            {
                <tr>
                    <td>@p.Nombre</td>
                    <td>@p.FechaCaducidad.ToShortDateString()</td>
                    <td>@p.EntMarcas.Nombre</td>
                    <td>@p.EntDepartamentos.Nombre</td>
                    <td>
                        <a href="/Home/EditarFormulario?id=@p.Id" class="btn btn-outline-info btn-sm">Editar</a>
                        <a href="/Home/Borrar?id=@p.Id" class="btn btn-outline-dark btn-sm">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
